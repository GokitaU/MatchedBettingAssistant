<Window x:Class="MatchedBettingAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchedBettingAssistant"
        xmlns:account="clr-namespace:MatchedBettingAssistant.View.Account"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <account:EditAccountView DataContext="{Binding EditAccountViewModel}"/>
        <account:AccountTransactionListView Grid.Row="1"
                                            DataContext="{Binding TransactionListViewModel}"/>
    </Grid>
</Window>
