<dx:DXWindow
    x:Class="MatchedBettingAssistant.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:account="clr-namespace:MatchedBettingAssistant.View.Account"
    Title="MainWindow" Height="350" Width="525"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <account:EditBookmakerView DataContext="{Binding BookmakerViewModel}"/>
        <account:AccountTransactionListView Grid.Row="1"
                                            DataContext="{Binding TransactionListViewModel}"/>
    </Grid>
</dx:DXWindow>
